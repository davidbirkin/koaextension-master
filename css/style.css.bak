  }

  .amountinput {
    text-align:right;
    width:70px;
    border-radius:5px 5px;
    margin: 5px 5px;
    font-size: 12px;
  }

  .totalamount {
    float:left;
    text-align:right;
    width:60px;
    border: solid 1px black;
    margin: 5px 5px;
    padding:5px 5px;
  }


