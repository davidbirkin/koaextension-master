    font-size: 12px;
    align-items: center;
    display: flex;
    justify-content: space-between;
  }

  #rssdropdown {
    display: block; width: 100px; margin-top: 5px;      
  }
  .amount {
    float:left;
    text-align:right;
    width:60px;
    /*border: solid 1px black;*/
