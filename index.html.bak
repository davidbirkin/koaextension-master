              <div><span class='amount'>1500 x </span><input type="number" class="amountinput" id="silver5" value="0"/><span id="s5" class="totalmount"></span></div><hr />
              <div><span class='amount'>2500 x </span><input type="number" class="amountinput" id="silver6" value="0"/><span id="s6" class="totalmount"></span></div><hr />
              <div><span class="amountinput">Total: </span><span id="st" class="totalmount"></span></div><hr />
            </div>
        </div>
