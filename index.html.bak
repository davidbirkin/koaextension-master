              <div><span class='amount'>50,000 x </span><input type="number" class="amountinput" id="food6" value="0"/><span id="f6" class="totalmount"></span></div><hr />
              <div><span class='amount'>150,000 x </span><input type="number" class="amountinput" id="food7" value="0"/><span id="f7" class="totalmount"></span></div><hr />
              <div><span class="amountinput">Total : </span><span id="ft" class="totalmount"></span></div><hr />    
            </div>
            <div id="wood" class="resource" style="display:none">
              <span>Enter Wood Denominations</span><hr />
              <div><span class='amount'>1000 x </span><input type="number" class="amountinput" id="wood1" value="0"/><span id="w1" class="totalmount"></span></div><hr />
              <div><span class='amount'>3000 x </span><input type="number" class="amountinput" id="wood2" value="0"/><span id="w2" class="totalmount"></span></div><hr />
              <div><span class='amount'>5000 x </span><input type="number" class="amountinput" id="wood3" value="0"/><span id="w3" class="totalmount"></span></div><hr />
              <div><span class='amount'>10,000 x </span><input type="number" class="amountinput" id="wood4" value="0"/><span id="w4" class="totalmount"></span></div><hr />
              <div><span class='amount'>30,000 x </span><input type="number" class="amountinput" id="wood5" value="0"/><span id="w5" class="totalmount"></span></div><hr />
              <div><span class='amount'>50,000 x </span><input type="number" class="amountinput" id="wood6" value="0"/><span id="w6" class="totalmount"></span></div><hr />
              <div><span class='amount'>150,000 x </span><input type="number" class="amountinput" id="wood7" value="0"/><span id="w7" class="totalmount"></span></div><hr />
              <div><span class="amountinput">Total: </span><span id="wt" class="totalmount"></span></div><hr />
            </div>
            <div id="iron" class="resource" style="display:none">
              <span>Enter Iron Denominations</span><hr />
              <div><span class='amount'>200 x </span><input type="number" class="amountinput" id="iron1" value="0"/><span id="i1" class="totalmount"></span></div><hr />
              <div><span class='amount'>600 x </span><input type="number" class="amountinput" id="iron2" value="0"/><span id="i2" class="totalmount"></span></div><hr />
