              <div><span class='amount'>10,000 x </span><input type="number" class="amountinput" id="iron6" value="0"/><span id="i6" class="totalmount"></span></div><hr />
              <div><span class='amount'>30,000 x </span><input type="number" class="amountinput" id="iron7" value="0"/><span id="i7" class="totalmount"></span></div><hr />
              <div><span class="amountinput">Total: </span><span id="it" class="totalmount"></span></div><hr />
            </div>
            <div id="silver" class="resource" style="display:none">
              <span>Enter Silver Denominations</span><hr />
              <div><span class='amount'>50 x </span><input type="number" class="amountinput" id="silver1" value="0"/><span id="s1" class="totalmount"></span></div><hr />
