				<option value="33">33</option>
				<option value="34">34</option>
				<option value="35">35</option>
			  </select><br/>
                <select id="isuelt">
                    <option value="none">No Isuelt Gear</option>
                    <option value="orange">Orange Isuelt</option>
                    <option value="purple">Purple Isuelt</option>
                    <option value="blue">Blue Isuelt</option>
                </select>
              <button id="get-data">Get Data</button>
                <hr/>
			  <div id="show-data"></div>			
        </div>
      </div>
    </div>
  </body>
</html>
